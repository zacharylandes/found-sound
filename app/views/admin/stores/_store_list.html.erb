 	      <table class="table table-hover">
          <thead>
            <tr>
              <th>Store</th>
              <th>Address</th>
              <th>Status</th>
            </tr>
          </thead>
             <tbody>
          <% @stores.each do |store| %>
            <tr>
                <th scope="row"> <%= link_to store.name, store_path(store.slug) %></th>
                <td><%= store.address %></td>
                <td><%= store.status.capitalize %></td>
                <% if params['tab']=="Pending"%>
                <td><%= link_to "Approve", admin_store_path(store), method: :put, class: "btn btn-warning btn-sm" %></td>
                <% end %>
            <% end %>
           </tbody>
       </table>
     </div>
